rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasRole(role) {
      return isAuthenticated() && 
             (
               (getUserData().role is list && role in getUserData().role) || 
               (getUserData().role is string && (
                 getUserData().role == role || 
                 getUserData().role.matches('.*"' + role + '".*')
               ))
             );
    }

    function isSuperAdmin() {
      return hasRole('super-admin');
    }

    function isSchoolAdmin() {
      return hasRole('school-admin');
    }

    function isTeacher() {
      return hasRole('teacher');
    }

    function isStudent() {
      return hasRole('student');
    }

    function isManagement() {
      return hasRole('school-admin') || hasRole('academic-director') || hasRole('head-of-section');
    }

    // --- Collection Rules ---

    // Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated(); 
      allow write: if isSuperAdmin() || (
        isSchoolAdmin() && 
        (resource == null || resource.data.schoolId == getUserData().schoolId) &&
        request.resource.data.schoolId == getUserData().schoolId
      );
    }

    // Schools Collection
    match /schools/{schoolId} {
      allow read: if isAuthenticated();
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin() || (isSchoolAdmin() && getUserData().schoolId == schoolId);
      allow delete: if isSuperAdmin();
    }

    // Settings Collection (Global)
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }

    // Modules Collection
    match /modules/{moduleId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }

    // School Modules (Assignments)
    match /schoolModules/{assignmentId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin();
    }

    // AI Usage Stats
    match /aiUsage/{usageId} {
      allow read: if isSuperAdmin();
      allow write: if false;
    }

    // Subscriptions
    match /subscriptions/{subId} {
      allow read: if isSuperAdmin() || (isSchoolAdmin() && resource.data.schoolId == getUserData().schoolId);
      allow write: if isSuperAdmin();
    }

    // Support Tickets
    match /tickets/{ticketId} {
      allow read: if isSuperAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated();
      allow update: if isSuperAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
    }

    // Academic Years
    match /academicYears/{yearId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    // Teacher Assignments
    match /teacherAssignments/{assignmentId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    // Management Assignments
    match /managementAssignments/{assignmentId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    // Progress Reports
    match /progressReports/{reportId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin() || isTeacher();
    }

    // Attendance
    match /attendance/{attendanceId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin() || isTeacher();
    }

    // Assessment Structures
    match /assessmentStructures/{structureId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isManagement();
    }

    // Student Assessment Grades
    match /studentAssessmentGrades/{gradeId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isManagement() || isTeacher();
    }

    // Academic Structure
    match /majors/{id} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }
    match /groups/{id} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }
    match /grades/{id} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }
    match /sections/{id} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }
    match /subjects/{id} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }
    match /subjectAllocations/{id} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    // Timetable Collections
    match /schoolDivisions/{divisionId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    match /timeSlots/{slotId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    match /rooms/{roomId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    match /timetableEntries/{entryId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    // Timetable Requests (Async Generation)
    match /timetable_requests/{requestId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    // Exam Seating Module
    match /examRooms/{roomId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    match /examSessions/{sessionId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    match /examSeating/{seatId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    // Audit Logs (Relaxed for debugging)
    match /auditLogs/{logId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }

    // Inventory Module
    match /inventoryItems/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    match /inventoryCategories/{catId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    match /inventoryTransactions/{transId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }

    // Library Module
    match /books/{bookId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin() || isTeacher();
    }

    match /library_transactions/{transId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin() || isTeacher();
    }

    // Notices
    match /notices/{noticeId} {
      allow read: if isAuthenticated();
      allow write: if isSuperAdmin() || isSchoolAdmin();
    }
  }
}